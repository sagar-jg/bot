{
  "environment": "dev",
  "debug": true,
  "server": {
    "host": "127.0.0.1",
    "port": 8000,
    "workers": 1,
    "reload": true,
    "log_level": "debug",
    "access_log": true,
    "timeout": 60,
    "keepalive": 2
  },
  "database": {
    "max_connections": 5,
    "pool_size": 2,
    "pool_timeout": 30,
    "pool_recycle": 3600,
    "echo": true
  },
  "logging": {
    "level": "DEBUG",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/dev/app.log",
    "max_bytes": 5242880,
    "backup_count": 5
  },
  "monitoring": {
    "health_check_interval": 30,
    "metrics_enabled": true,
    "performance_tracking": true,
    "detailed_logging": true
  },
  "security": {
    "cors_origins": ["*"],
    "rate_limiting": {
      "enabled": false,
      "requests_per_minute": 1000
    },
    "api_key_required": false,
    "trusted_hosts": ["localhost", "127.0.0.1"]
  },
  "features": {
    "admin_endpoints": true,
    "debug_endpoints": true,
    "api_docs": true,
    "detailed_errors": true
  },
  "ai_services": {
    "timeout_seconds": 30,
    "max_retries": 3,
    "debug_mode": true
  }
}
