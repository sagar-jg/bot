{
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 4,
    "reload": false,
    "log_level": "info",
    "access_log": true,
    "timeout": 30,
    "keepalive": 2
  },
  "database": {
    "max_connections": 20,
    "pool_size": 5,
    "pool_timeout": 30,
    "pool_recycle": 3600,
    "echo": false
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/app.log",
    "max_bytes": 10485760,
    "backup_count": 10
  },
  "monitoring": {
    "health_check_interval": 60,
    "metrics_enabled": true,
    "performance_tracking": true
  },
  "security": {
    "cors_origins": ["https://yourdomain.com"],
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 100
    },
    "api_key_required": false
  }
}